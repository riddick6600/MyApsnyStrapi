{
    "kind": "collectionType",
    "collectionName": "hotels",
    "info": {
        "singularName": "hotel",
        "pluralName": "hotels",
        "displayName": "Отели",
        "description": "Управление Отелями"
    },
    "attributes": {
        "name": {
            "type": "string"
        },
        "isActive": {
            "type": "boolean"
        },
        "stars": {
            "type": "integer",
            "min": 0,
            "max": 5
        },
        "isRecommended": {
            "type": "boolean",
            "default": false
        },
        "isInstant": {
            "type": "boolean",
            "default": false
        },
        "canFullPayment": {
            "type": "boolean",
            "default": false
        },
        "prePaymentPercent": {
            "type": "integer",
            "default": 13
        },
        "partnerPrepaid": {
            "type": "integer",
            "default": 0
        },
        "distanceToSea": {
            "type": "integer"
        },
        "distanceToCenter": {
            "type": "integer"
        },
        "roomCount": {
            "type": "integer"
        },
        "constructionYear": {
            "type": "integer"
        },
        "description": {
            "type": "text"
        },
        "hotelType": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::hoteltype.hoteltype"
        },
        "city": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::place.place"
        },
        "amenities": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::amenity.amenity"
        },
        "images": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "images"
            ]
        },
        "content": {
            "type": "richtext"
        },
        "faq": {
            "type": "component",
            "component": "hotel.faq"
        },
        "contacts": {
            "type": "component",
            "component": "hotel.contact"
        },
        "address": {
            "type": "component",
            "component": "hotel.address"
        },
        "policy": {
            "type": "component",
            "component": "travelline.policy"
        },
        "roomTypes": {
            "type": "component",
            "component": "hotel.room-type",
            "repeatable": true
        },
        "ratePlans": {
            "type": "component",
            "component": "hotel.rate-plan",
            "repeatable": true
        },
        "cancellationRules": {
            "type": "component",
            "repeatable": true,
            "component": "hotel.cancellation-term"
        },
        "page": {
            "type": "component",
            "component": "page.page"
        },
        "travelline": {
            "displayName": "travelline",
            "type": "component",
            "component": "travelline.property"
        },
        "remark": {
            "type": "text"
        }
    }
}