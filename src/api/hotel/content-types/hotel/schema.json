{
  "kind": "collectionType",
  "collectionName": "hotels",
  "info": {
    "singularName": "hotel",
    "pluralName": "hotels",
    "displayName": "Отели",
    "description": "Управление Отелями"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "content": {
      "type": "richtext"
    },
    "stars": {
      "type": "integer",
      "min": 0,
      "max": 5
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "place": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::place.place"
    },
    "page": {
      "type": "component",
      "component": "page.page"
    },
    "travelline": {
      "displayName": "travelline",
      "type": "component",
      "component": "travelline.hotel"
    },
    "typeOfAccommodation": {
      "type": "string"
    },
    "location": {
      "type": "component",
      "component": "travelline.address"
    },
    "distanceToSea": {
      "type": "integer"
    },
    "distanceToCenter": {
      "type": "integer"
    },
    "amenities": {
      "type": "component",
      "repeatable": true,
      "component": "travelline.amenity"
    },
    "policy": {
      "type": "component",
      "component": "travelline.policy"
    },
    "numberOfRooms": {
      "type": "integer"
    },
    "yearOfConstruction": {
      "type": "integer"
    },
    "paymentAndBooking": {
      "label": "Оплата и бронирование",
      "type": "string"
    },
    "faq": {
      "label": "Часто задаваемые вопросы",
      "type": "string",
      "repeatable": true
    },
    "roomTypes": {
      "type": "component",
      "component": "travelline.room-type",
      "repeatable": true
    },
    "hotelType": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::hoteltype.hoteltype"
    },
    "isActive": {
      "type": "boolean"
    }
  }
}
