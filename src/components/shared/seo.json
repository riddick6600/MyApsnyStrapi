{
    "collectionName": "components_shared_seos",
    "info": {
        "displayName": "seo",
        "icon": "search"
    },
    "attributes": {
        "metaTitle": {
            "required": true,
            "type": "string",
            "maxLength": 60
        },
        "metaDescription": {
            "type": "string",
            "maxLength": 160,
            "minLength": 50
        },
        "metaImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        },
        "openGraph": {
            "type": "component",
            "component": "shared.open-graph"
        },
        "keywords": {
            "type": "text",
            "regex": "[^,]+"
        },
        "metaRobots": {
            "type": "string",
            "regex": "[^,]+"
        },
        "metaViewport": {
            "type": "string"
        },
        "canonicalURL": {
            "type": "string"
        },
        "structuredData": {
            "type": "json"
        }
    }
}